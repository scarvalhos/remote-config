{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@libs/*": ["./src/libs/*"],
      "@services/*": ["./src/services/*"],
      "@config": ["./src/config"],
      "@routes": ["./src/routes"]
    }
  }
}
